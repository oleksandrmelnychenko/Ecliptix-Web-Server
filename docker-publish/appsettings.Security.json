{
  "Security": {
    "RateLimit": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 4,
      "QueueLimit": 10
    },
    "IpThrottling": {
      "MaxRequestsPerMinute": 60,
      "MaxFailuresBeforeBlock": 5,
      "BlockDurationMinutes": 15,
      "CleanupIntervalMinutes": 5,
      "ThrottleDataRetentionMinutes": 30
    },
    "ServerLimits": {
      "MaxRequestBodySizeMB": 10,
      "RequestHeadersTimeoutSeconds": 30,
      "KeepAliveTimeoutMinutes": 2,
      "MaxConcurrentConnections": 1000,
      "MaxConcurrentUpgradedConnections": 1000
    },
    "GrpcSecurity": {
      "MinTimeBetweenRequestsMs": 100,
      "MaxCachedRequestTimes": 10000,
      "RequestTimeCleanupMinutes": 5
    },
    "ContentValidation": {
      "AllowedContentTypes": [
        "application/grpc",
        "application/grpc+proto",
        "application/json"
      ],
      "MaxHeaderValueLength": 8192,
      "SuspiciousPatterns": [
        "script",
        "<",
        ">",
        "javascript",
        "vbscript",
        "onload",
        "onerror"
      ]
    },
    "SecurityHeaders": {
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin",
      "X-Robots-Tag": "noindex, nofollow"
    }
  },
  "SecurityKeys": {
    "ServerPrivateKeyPath": "server_private.pem",
    "OpaqueSecretKeySeed": "0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"
  }
}
    <ItemGroup>
        <Content Include="..\.dockerignore">
            <Link>.dockerignore</Link>
        </Content>
        <Content Include="akka.conf">
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Ecliptix.Domain\Ecliptix.Domain.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Resources\VerificationFlowRes.resx">
            <Generator>PublicResXFileCodeGenerator</Generator>
            <LastGenOutput>VerificationFlowRes.Designer.cs</LastGenOutput>
        </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Resources\VerificationFlowRes.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>VerificationFlowRes.resx</DependentUpon>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <TrimmerRootAssembly Include="Serilog.Sinks.Console" />
        <TrimmerRootAssembly Include="Serilog.Sinks.File" />
        <TrimmerRootAssembly Include="Serilog.Settings.Configuration" />
    </ItemGroup>
    
    <ItemGroup>
        <TrimmerRootDescriptor Include="rd.xml" />
    </ItemGroup>
</Project>

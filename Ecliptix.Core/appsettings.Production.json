{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.AwsCloudWatch"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "AmazonCloudWatch",
        "Args": {
          "region": "eu-central-1",
          "logGroup": "ecliptix-memberships-logs",
          "logStreamPrefix": "ecs",
          "textFormatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithEnvironmentName",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "Ecliptix"
    }
  },
  "Security": {
    "VerificationFlow": {
      "SessionTimeoutSeconds": 300,
      "OtpUpdateIntervalSeconds": 1,
      "OtpExpirationSeconds": 90,
      "MembershipCreationTimeoutSeconds": 15,
      "ResendOtpCheckTimeoutSeconds": 30,
      "CreateOtpTimeoutSeconds": 30,
      "UpdateOtpStatusTimeoutSeconds": 15,
      "ChannelWriteTimeoutSeconds": 10,
      "FallbackCleanupDelaySeconds": 15,
      "MaxSmsRetries": 3
    },
    "Cryptography": {
      "Argon2MemorySize": 524288,
      "Argon2Iterations": 6,
      "Argon2DegreeOfParallelism": 4,
      "EnhancedKeyOutputLength": 64,
      "MasterKeySize": 32,
      "DefaultThreshold": 3,
      "DefaultTotalShares": 5,
      "AskTimeoutSeconds": 45
    },
    "Authentication": {
      "PendingSignInTimeoutSeconds": 900,
      "PendingPasswordRecoveryTimeoutSeconds": 900,
      "CleanupIntervalSeconds": 600,
      "PasswordRecoveryCleanupIntervalSeconds": 300
    },
    "OtpHashing": {
      "SaltSize": 32,
      "Pbkdf2Iterations": 310000,
      "HashOutputLength": 32
    }
  }
}